        <Button x:Name="back" Click="Back_Click" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="35" Margin="10,10,0,0" FontSize="20">RETURN</Button>

        <Label x:Name="classif" Width="300" Background="Transparent" Height="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" FontWeight="Bold" Margin="190,10,10,260">CLASSIFICA CAMPIONATO</Label>
        <Label x:Name="punti1" Width="300" Background="Transparent" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" FontWeight="Bold" Margin="190,65,10,205"></Label>
        <Label x:Name="punti2" Width="300" Background="Transparent" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" FontWeight="Bold" Margin="190,120,10,149"/>

    </Grid>
</Window>
